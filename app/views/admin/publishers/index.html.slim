- page_title = controller_name.titlecase
= admin_page_title page_title

#content-header
  h1 = page_title
#content-container
  table.table.table-striped.table-bordered.table-hover data-provide='datatable'
    thead
      = render 'collection_header'
    tbody.publisher-collection
      = render partial: 'collection_item', collection: collection, as: 'resource'

  == paginate collection, theme: 'admin'
  br
  = link_to 'Add new publisher', new_admin_publisher_url, remote: true, class: 'btn btn-primary'
